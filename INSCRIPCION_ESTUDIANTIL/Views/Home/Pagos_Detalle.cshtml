@model INSCRIPCION_ESTUDIANTIL.Models.ViewModels.PagosVM

@{
    ViewData["Title"] = "Pagos_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oPagos.IdPago == 0)
{
    <h1>Crear Pagos</h1>
}

else
{
    <h1>Editar Pagos</h1>
}

<div class="row">
    <div class="col-sm-4">

        <form asp-action="Pagos_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oPagos.IdPago" />

            <div class="mb-2">
                <label class="form-label" asp-for="oPagos">Fecha del Pago</label>
                <input class="form-control form-control-sm" asp-for="oPagos.FechaPago" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oPagos.Monto">Monto</label>
                <input class="form-control form-control-sm" asp-for="oPagos.Monto" type="text" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oPagos.IdInscripcion">Numero de Inscripcion</label>
                <select class="form-select form-select-sm" asp-for="oPagos.IdInscripcion" asp-items="@Model.oListaInscripciones;">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
            </div>

            <div class="mb-2">
                @if (Model.oPagos.IdPago == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>

                }

                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>


            </div>
        </form>

    </div>
</div>