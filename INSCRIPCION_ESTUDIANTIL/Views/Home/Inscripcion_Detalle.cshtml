@model INSCRIPCION_ESTUDIANTIL.Models.ViewModels.InscripcionVM

@{
    ViewData["Title"] = "Inscripcion_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oInscripcion.IdInscripcion == 0)
{
    <h1>Crear Inscripcion</h1>
}

else
{
    <h1>Editar Inscripcion</h1>
}

<div class="row">
    <div class="col-sm-4">
        
        <form asp-action="Inscripcion_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oInscripcion.IdInscripcion" />

            <div class="mb-2">
                <label class="form-label" asp-for="oInscripcion.IdInscripcion">Fecha Inscripcion</label>
                <input class="form-control form-control-sm" asp-for="oInscripcion.FechaInscripcion" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oInscripcion.IdEstudiante">Matricula Estudiante</label>
                <input class="form-control form-control-sm" asp-for="oInscripcion.IdEstudiante" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oInscripcion.EstadoInscripcion">Estado de Inscripcion</label>
                <input class="form-control form-control-sm" asp-for="oInscripcion.EstadoInscripcion" type="text" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oInscripcion.IdCurso">Curso</label>
                <select class="form-select form-select-sm" asp-for="oInscripcion.IdCurso" asp-items="@Model.oListaCurso">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
            </div>

            <div class="mb-2">
                @if (Model.oInscripcion.IdInscripcion == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>

                }

                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>


            </div>
        </form>

    </div>
</div>