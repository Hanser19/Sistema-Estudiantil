@model INSCRIPCION_ESTUDIANTIL.Models.Inscripcion

@{
    ViewData["Title"] = "Eliminar_Inscripcion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">Estas seguro de eliminar la inscripcion?</h3>

<div class="row">
    <div class="col-sm-4">

        <form asp-action="Eliminar_Inscripcion" asp-controller="Home" method="post">
            <input type="hidden" asp-for="IdInscripcion" />

            <div class="mb-2">
                <label class="form-label" asp-for="IdInscripcion">Fecha Inscripcion</label>
                <input class="form-control form-control-sm" asp-for="FechaInscripcion" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="IdEstudiante">Matricula Estudiante</label>
                <input class="form-control form-control-sm" asp-for="IdEstudiante" type="text" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="EstadoInscripcion">Estado de Inscripcion</label>
                <input class="form-control form-control-sm" asp-for="EstadoInscripcion" type="text" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="IdCurso">Curso</label>
                <input class="form-control form-control-sm" asp-for="oCurso.DescripcionCurso" type="text" disabled />

            </div>

            <div class="mb-2">

                <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>
                <a class="btn btn-dark btn-sm" asp-action="Inscripcion" asp-controller="Home">Volver</a>


            </div>
        </form>

    </div>
</div>