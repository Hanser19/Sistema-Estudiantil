@model INSCRIPCION_ESTUDIANTIL.Models.ViewModels.SeccionesVM
@{
    ViewData["Title"] = "Secciones_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.oSecciones.IdSecciones == 0)
{
    <h1>Crear Secciones</h1>
}

else
{
    <h1>Editar Secciones</h1>
}

<div class="row">
    <div class="col-sm-4">

        <form asp-action="Secciones_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oSecciones.IdSecciones" />

            <div class="mb-2">
                <label class="form-label" asp-for="oSecciones.NombreSeccion">Nombre de la Seccion</label>
                <input class="form-control form-control-sm" asp-for="oSecciones.NombreSeccion" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oSecciones.CuposSeccion">Cupones de la Seccion</label>
                <input class="form-control form-control-sm" asp-for="oSecciones.CuposSeccion" type="text" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oSecciones.IdCurso">Cursos</label>
                <select class="form-select form-select-sm" asp-for="oSecciones.IdCurso" asp-items="@Model.oListaCursos">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
            </div>

            <div class="mb-2">
                @if (Model.oSecciones.IdSecciones == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>

                }

                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>


            </div>
        </form>

    </div>
</div>