@model INSCRIPCION_ESTUDIANTIL.Models.ViewModels.AsignaturasVM

@{
    ViewData["Title"] = "Asignaturas_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oAsignatura.IdAsignaturas == 0)
{
    <h1>Crear Asignatura</h1>
}

else
{
    <h1>Editar Asignatura</h1>
}

<div class="row">
    <div class="col-sm-4">

        <form asp-action="Asignaturas_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oAsignatura.IdAsignaturas" />

            <div class="mb-2">
                <label class="form-label" asp-for="oAsignatura.NombreAsignatura">Nombre de la Asignatura</label>
                <input class="form-control form-control-sm" asp-for="oAsignatura.NombreAsignatura" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oAsignatura.Descripcion">Descripcion del la Asignatura</label>
                <input class="form-control form-control-sm" asp-for="oAsignatura.Descripcion" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oAsignatura.Creditos">Creditos del la Asignatura</label>
                <input class="form-control form-control-sm" asp-for="oAsignatura.Creditos" type="text" />
            </div>

            <div class="mb-2">

                @if (Model.oAsignatura.IdAsignaturas == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>

                }

                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>

            </div>

        </form>

    </div>
</div>