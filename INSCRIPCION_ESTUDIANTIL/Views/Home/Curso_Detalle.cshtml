@model INSCRIPCION_ESTUDIANTIL.Models.ViewModels.CursoVM

@{
    ViewData["Title"] = "Curso_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oCurso.IdCurso == 0)
{
    <h1>Crear Curso</h1>
}

else
{
    <h1>Editar Curso</h1>
}

<div class="row">
    <div class="col-sm-4">

        <form asp-action="Curso_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oCurso.IdCurso" />

            <div class="mb-2">
                <label class="form-label" asp-for="oCurso.IdCurso">Nombre del Curso</label>
                <input class="form-control form-control-sm" asp-for="oCurso.NombreCurso" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oCurso.DescripcionCurso">Descripcion del Curso</label>
                <input class="form-control form-control-sm" asp-for="oCurso.DescripcionCurso" type="text" />
            </div>

            <div class="mb-2">
                @if (Model.oCurso.IdCurso == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>

                }

                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }

                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>


            </div>
        </form>

    </div>
</div>